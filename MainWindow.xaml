<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Brest_Pekar"
        xmlns:ViewModels="clr-namespace:Brest_Pekar.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controlzex="urn:controlzex"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Models="clr-namespace:Brest_Pekar.Models"
        x:Class="Brest_Pekar.MainWindow"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        Title="Контур.Пекарь"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Background="{x:Null}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        Icon="/icon.ico"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Width="1460"
        Height="735">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard TargetProperty="Margin"
                                TargetName="tabcontrol">
                        <ThicknessAnimation From="-200,0,0,0"
                                            To="0,0,0,0"
                                            Duration="0:0:3" />
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard TargetProperty="Opacity"
                                TargetName="tabcontrol">
                        <DoubleAnimation From="0"
                                         To="1"
                                         Duration="0:0:3" />
                    </Storyboard>
                </BeginStoryboard>
                <!-- <BeginStoryboard>
					<Storyboard TargetProperty="Margin" TargetName="girl_picture">
						<ThicknessAnimation From="0,22,0,0" To="373,22,0,0"
							Duration="0:0:3"
						 />
					</Storyboard>
				</BeginStoryboard> -->
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>
