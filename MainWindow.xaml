                    <StackPanel Width="111"
                                Height="auto"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Left"
                                                 Kind="Warehouse" />
                        <TextBlock Margin="10,0,0,0"
                                   HorizontalAlignment="Left"
                                   Text="Продукция"
                                   LineHeight="NaN"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Grid.Row="1">
                    <Image Source="/Resources/payment_calculation_233533.png"
                           Stretch="None"
                           HorizontalAlignment="Right" />
                    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                                         Padding="10,0,10,10"
                                         UniformCornerRadius="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                        <StackPanel>
                            <DataGrid SelectionUnit="FullRow"
                                      CanUserDeleteRows="False"
                                      CanUserAddRows="False"
                                      AutoGenerateColumns="False"
                                      Unloaded="DataGrid_Unloaded"
                                      Loaded="DataGrid_Loaded"
                                      Name="grid_products"
                                      RowEditEnding="DataGrid_RowEditEnding"
                                      SelectedItem="{Binding SelectedProduct}"
                                      ItemsSource="{Binding Products}"
                                      Background="Transparent"
                                      MaxHeight="290">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Номер"
                                                        Binding="{Binding Id}"
                                                        IsReadOnly="True" />
                                    <DataGridTemplateColumn Header="Товар">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.ProductTypes, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"
                                                          SelectedItem="{Binding Path=Product_Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          DisplayMemberPath="Name"
                                                          Text="{Binding Path=Product_Type.Name}"
                                                          IsTextSearchEnabled="True"
                                                          TextSearch.TextPath="Name"
                                                          IsEditable="True"
                                                          VerticalAlignment="Top" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Дата производства"
                                                            CanUserSort="True"
                                                            SortMemberPath="Date_Of_Production">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DatePicker VerticalAlignment="Top"
                                                            SelectedDate="{Binding Date_Of_Production, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:Badged Badge="DELETE"
                                                                       BadgeColorZoneMode="Dark">
                                                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                            ToolTip="Удалить"
                                                            Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"
                                                            CommandParameter="{Binding DataContext.SelectedProduct, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}">
                                                        <materialDesign:PackIcon Width="24"
                                                                                 Height="24"
                                                                                 HorizontalAlignment="Left"
                                                                                 Kind="Delete" />
                                                    </Button>
                                                </materialDesign:Badged>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <materialDesign:Badged Margin="0,20,0,0"
                                                   Badge="ADD"
                                                   BadgeColorZoneMode="Dark">
                                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                        ToolTip="Добавить"
                                        Command="{Binding DataContext.AddProductCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}">
                                    <materialDesign:PackIcon Width="24"
                                                             Height="24"
                                                             HorizontalAlignment="Left"
                                                             Kind="Add" />
                                </Button>
                            </materialDesign:Badged>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
            <TabItem Width="140"
                     VerticalAlignment="Center"
                     x:Name="tabitem_stores"
