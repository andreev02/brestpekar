                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Click="PekarLink_Click"
                                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                            <materialDesign:PackIcon Kind="InsertLink" />
                                        </Button>
                                        <StackPanel Grid.Row="1"
                                                    Margin="8,24,8,4">
                                            <TextBlock FontWeight="Bold"
                                                       Margin="0"
                                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                       Text="ОАО 'Берестейский пекарь'" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                       Text="Является ведущим предприятием по производству хлебобулочных и кондитерских изделий Брестской области."
                                                       TextWrapping="Wrap"
                                                       FontSize="14" />
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card Width="225"
                                                     Height="400"
                                                     Margin="50">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="140" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Height="140"
                                               Source="Resources/bgklp.jpg"
                                               Stretch="UniformToFill" />
                                        <Button Grid.Row="0"
                                                Margin="0,0,16,-20"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Click="BGKLPLink_Click"
                                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                            <materialDesign:PackIcon Kind="InsertLink" />
                                        </Button>
                                        <StackPanel Grid.Row="1"
                                                    Margin="8,24,8,4">
                                            <TextBlock FontWeight="Bold"
                                                       Margin="0"
                                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                       Text="БГКЛП им. В.Е. Чернышева" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                       Text="Ул. Кирова, 48, г.Барановичи, 225410, Республика Беларусь | Тел./факс: 8-(0163) 64-71-42 | bgklp@bgklp.by."
                                                       TextWrapping="Wrap"
                                                       FontSize="14" />
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>
                        </StackPanel>
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp3"
                                             Padding="5"
                                             Grid.Column="0"
                                             VerticalAlignment="Bottom"
                                             Width="228"
                                             HorizontalAlignment="Left"
                                             Margin="170,0,0,100">
                            <StackPanel>
                                <TextBlock Text="Разработчик"
                                           HorizontalAlignment="Center"
                                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}" />
                                <materialDesign:Chip HorizontalAlignment="Center"
                                                     Content="Алексей Андреев">
                                    <materialDesign:Chip.Icon>
                                        <Image Source="Resources/alesha.jpg"
                                               Stretch="Uniform" />
                                    </materialDesign:Chip.Icon>
                                </materialDesign:Chip>
                                <TextBlock VerticalAlignment="Center"
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                           Text="Учашийся 4 курса, группа 510. БКГЛП им. В.Е.Чернышева."
                                           TextWrapping="Wrap"
                                           FontSize="14" />
                            </StackPanel>
                        </materialDesign:Card>
                        <StackPanel Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">
                            <TextBlock Text="2023 г."
                                       TextAlignment="Center" />
                            <TextBlock Text="Дипломный проект" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Width="140"
                     x:Name="tabitem_productTypes"
                     Selector.Selected="tabcontrol_Selected"
                     VerticalAlignment="Center">
                <TabItem.Header>
                    <StackPanel Width="111"
                                Height="auto"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Left"
                                                 Kind="Baguette" />
                        <TextBlock Margin="10,0,0,0"
                                   HorizontalAlignment="Left"
                                   Text="Товары"
                                   LineHeight="NaN"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Grid.Row="1">
                    <Image Source="/Resources/business_taxday_233532.png"
                           Stretch="None"
                           HorizontalAlignment="Left" />
                    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                                         Padding="10,0,10,10"
                                         UniformCornerRadius="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                        <StackPanel>
                            <DataGrid x:Name="grid_productTypes"
                                      SelectionUnit="FullRow"
                                      CanUserDeleteRows="False"
                                      CanUserAddRows="False"
                                      AutoGenerateColumns="False"
                                      Loaded="DataGrid_Loaded"
                                      RowEditEnding="DataGrid_RowEditEnding"
                                      SelectedItem="{Binding SelectedProductType}"
                                      ItemsSource="{Binding ProductTypes}"
                                      Background="Transparent"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      MaxHeight="290">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Наименование"
                                                        Width="200"
                                                        Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    <DataGridTextColumn Header="Цена (BYN)"
                                                        Width="200"
                                                        Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />
                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:Badged Badge="DELETE"
                                                                       BadgeColorZoneMode="Dark">
                                                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                            ToolTip="Удалить"
                                                            Command="{Binding DataContext.RemoveProductTypeCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"
                                                            CommandParameter="{Binding DataContext.SelectedProductType, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}">
                                                        <materialDesign:PackIcon Width="24"
                                                                                 Height="24"
                                                                                 HorizontalAlignment="Left"
                                                                                 Kind="Delete" />
                                                    </Button>
                                                </materialDesign:Badged>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <materialDesign:Badged Margin="0,20,0,0"
                                                   Badge="ADD"
                                                   BadgeColorZoneMode="Dark">
                                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                        ToolTip="Добавить"
                                        Command="{Binding DataContext.AddProductTypeCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}">
                                    <materialDesign:PackIcon Width="24"
                                                             Height="24"
                                                             HorizontalAlignment="Left"
                                                             Kind="Add" />
                                </Button>
                            </materialDesign:Badged>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
            <TabItem Width="140"
                     x:Name="tabitem_products"
                     Selector.Selected="tabcontrol_Selected"
                     VerticalAlignment="Center">
